<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<fx:root type="javafx.scene.control.ScrollPane" xmlns:fx="http://javafx.com/fxml"
		 prefWidth="300.0" maxWidth="300.0" minWidth="300.0"
		 styleClass="mainFxmlClass">
	<stylesheets>
		<URL value="@/storycanvas/view/default.css"/>
	</stylesheets>
	<content>
		<VBox prefWidth="295.0">
			<children>
				<HBox spacing="5.0">
					<children>
						<!-- アイコン -->
						<ImageView fx:id="entityIcon" fitWidth="64" fitHeight="64">
							<image>
								<Image url="/storycanvas/resource/icon/create.png"/>
							</image>
						</ImageView>
						<!-- タイトル -->
						<Label fx:id="entityName" text="エンティティ" maxWidth="221" maxHeight="64" wrapText="true" alignment="CENTER_LEFT" style="-fx-font-size:18px;-fx-font-weight:bold;"/>
					</children>
				</HBox>
				<!-- エディタ本体 -->
				<StackPane VBox.vgrow="ALWAYS" >
					<children>
						<AnchorPane fx:id="personEditor" visible="false" >
							<fx:include source="/storycanvas/view/part/editor/PersonEditor.fxml"/>
						</AnchorPane>
					</children>
				</StackPane>
			</children>
		</VBox>
	</content>
</fx:root>
